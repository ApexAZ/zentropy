{
	"name": "zentropy",
	"version": "1.0.0",
	"description": "A comprehensive Product Management platform with Python FastAPI backend and React frontend",
	"scripts": {
		"// === DEVELOPMENT ===": "",
		"dev": "node scripts/dev-startup.js",
		"stop": "node scripts/stop.js",
		"dev:check": "node scripts/check-ports.js",
		"dev:database": "docker-compose up -d",
		"dev:fallback": "PYTHONUNBUFFERED=1 concurrently --kill-others-on-fail --handle-input --names \"API,CLIENT\" -c \"yellow,cyan\" \"npm run dev:api\" \"npm run dev:client\"",
		"dev:api": "python3 -m uvicorn api.main:app --host 127.0.0.1 --port 3000 --reload",
		"dev:client": "vite dev --port 5173",
		
		"// === BUILD & PRODUCTION ===": "",
		"build": "vite build",
		"clean": "rm -rf dist/",
		"start": "python3 -m uvicorn api.main:app --host 0.0.0.0 --port 3000",
		
		"// === QUALITY ===": "",
		"lint": "python3 -m flake8 api/ --max-line-length=88 --extend-ignore=E203,W503",
		"format": "python3 -m black api/",
		"type-check": "python3 -m mypy api/ --ignore-missing-imports",
		"quality": "npm run lint && npm run format && npm run type-check",
		"test": "python3 -m pytest",
		"test:pre-commit": "python3 -m pytest tests/test_startup.py -v",
		
		"// === SETUP ===": "",
		"install:python": "python3 -m pip install -r requirements.txt",
		"install:all": "npm install && npm run install:python"
	},
	"devDependencies": {
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.0",
		"eslint": "^9.16.0",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-react-refresh": "^0.4.14",
		"postcss": "^8.5.5",
		"prettier": "^3.4.2",
		"tailwindcss": "^4.1.11",
		"typescript": "~5.6.2",
		"vite": "^7.0.0",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	}
}