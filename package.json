{
	"name": "zentropy",
	"version": "1.0.0",
	"type": "module",
	"description": "A comprehensive Product Management platform with Python FastAPI backend and React frontend",
	"scripts": {
		"// === CORE COMMANDS (Essential - Use These 95% of the Time) ===": "",
		"dev": "node scripts/dev-startup.js",
		"test": "npm run test:backend && npm run test:frontend",
		"build": "cd src/client && vite build",
		"lint": "npm run lint:python && npm run lint:typescript",
		"fix": "npm run format && npm run lint",
		"// === DEVELOPMENT (Advanced) ===": "",
		"stop": "node scripts/stop.js",
		"dev:check": "node scripts/check-ports.js",
		"dev:database": "docker-compose up -d",
		"dev:api": "python3 -m uvicorn api.main:app --host 127.0.0.1 --port 3000 --reload",
		"dev:client": "vite dev --port 5173",
		"// === DATABASE UTILITIES ===": "",
		"db:count": "python3 scripts/db_utils.py count",
		"db:list": "python3 scripts/db_utils.py list",
		"db:find": "python3 scripts/db_utils.py find",
		"db:delete": "python3 scripts/db_utils.py delete",
		"// === TESTING (Advanced) ===": "",
		"test:backend": "python3 -m pytest",
		"test:frontend": "vitest run",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:coverage": "npm run test:python:coverage && npm run test:frontend:coverage",
		"test:python:coverage": "python3 -m pytest --cov=api --cov-report=html:htmlcov --cov-report=term-missing --cov-report=xml --cov-fail-under=80",
		"test:frontend:coverage": "vitest run --coverage --coverage.thresholds.lines=80 --coverage.thresholds.functions=80 --coverage.thresholds.statements=80 --coverage.thresholds.branches=80",
		"test:roles": "python3 -m pytest tests/test_role_system.py::TestRoleEnums tests/test_role_system.py::TestRoleHierarchy tests/test_role_system.py::TestRoleSystemIntegration -v",
		"test:pre-commit": "python3 -m pytest tests/core/test_startup.py -v && vitest run",
		"// === QUALITY (Advanced) ===": "",
		"lint:python": "python3 -m flake8 api/ --max-line-length=88 --extend-ignore=E203,W503",
		"lint:typescript": "eslint src/client/**/*.{ts,tsx} --fix",
		"format": "npm run format:python && npm run format:typescript",
		"format:python": "python3 -m black api/",
		"format:typescript": "prettier --write \"src/client/**/*.{ts,tsx}\"",
		"type-check": "npm run type-check:python && npm run type-check:typescript",
		"type-check:python": "npx pyright api/",
		"type-check:python:strict": "npx pyright api/ --verbose",
		"type-check:typescript": "tsc --noEmit --skipLibCheck",
		"quality": "npm run format && npm run lint && npm run type-check && npm run test",
		"quality:pre-commit": "npm run lint && npm run format && npm run type-check && npm run test:pre-commit",
		"// === PERFORMANCE (Advanced) ===": "",
		"analyze:bundle": "echo 'üìä Bundle Size Analysis:' && du -sh src/client/dist/ && echo 'üìÅ Bundle Contents:' && ls -la src/client/dist/ && echo 'üìÅ Assets:' && ls -lah src/client/dist/assets/",
		"analyze:lighthouse": "lhci autorun",
		"perf:build-analyze": "npm run build && npm run analyze:bundle",
		"// === PRODUCTION & SETUP (Advanced) ===": "",
		"start": "python3 -m uvicorn api.main:app --host 0.0.0.0 --port 3000",
		"clean": "rm -rf src/client/dist/",
		"install:python": "python3 -m pip install -r requirements.txt",
		"install:all": "npm install && npm run install:python"
	},
	"devDependencies": {
		"@lhci/cli": "^0.15.1",
		"@playwright/test": "^1.48.2",
		"@tailwindcss/postcss": "^4.1.11",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jsdom": "^21.1.7",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitest/coverage-v8": "^3.2.4",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.0",
		"eslint": "^9.16.0",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-react-refresh": "^0.4.14",
		"jsdom": "^26.1.0",
		"postcss": "^8.5.5",
		"prettier": "^3.4.2",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"pyright": "^1.1.402",
		"tailwindcss": "^4.1.11",
		"typescript": "~5.6.2",
		"vite": "^7.0.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	}
}
