{
	"name": "zentropy",
	"version": "1.0.0",
	"description": "A comprehensive Product Management platform with project workflows, team collaboration, and capacity planning built with Node.js, Express, PostgreSQL, and TypeScript. Streamlines product development from planning to delivery.",
	"main": "dist/server/index.js",
	"scripts": {
		"// === DEVELOPMENT (Recommended: npm run dev) ===": "",
		"dev": "npm run build:client && python3 start_server.py",
		"dev:python": "python3 start_server.py",
		"dev:install": "python3 install_deps.py",
		"dev:deps": "python3 -m pip install -r requirements.txt",
		"dev:client": "vite dev --port 5173",
		"dev:fullstack": "concurrently \"npm run dev:client\" \"npm run dev\"",
		"dev:clean": "npm run emergency && npm run dev:safe",
		"// Commands: dev=safe startup | dev:simple=basic | dev:watch=auto-restart | dev:client=React only | dev:fullstack=both |": "",
		"// === BUILD & DEPLOYMENT ===": "",
		"build": "npm run lint && npm run build:client",
		"build:client": "vite build",
		"build:clean": "npm run clean && npm run build",
		"clean": "rm -rf dist/",
		"start": "python3 start_server.py",
		"copy-static": "mkdir -p dist/public && cp -r src/public/* dist/public/ 2>/dev/null || true",
		"check-static": "tsx scripts/ensure-static-files.ts",
		"postbuild": "npm run check-static",
		"// === CODE QUALITY ===": "",
		"lint": "eslint \"**/*.ts\" --ignore-path .eslintignore --fix",
		"lint:check": "eslint \"**/*.ts\" --ignore-path .eslintignore",
		"lint:html": "html-validate dist/public/*.html",
		"lint:html:check": "html-validate dist/public/*.html",
		"lint:css": "stylelint \"**/*.css\" --fix",
		"lint:css:check": "stylelint \"**/*.css\"",
		"lint:tailwind": "echo '‚ÑπÔ∏è  Tailwind CSS classes are automatically validated by IntelliSense and build process'",
		"lint:tailwind:check": "npm run build:client > /dev/null 2>&1 && echo '‚úÖ Tailwind CSS classes valid' || echo '‚ùå Tailwind CSS build failed - check for invalid classes'",
		"seo:check": "echo '‚ÑπÔ∏è  SEO Check: Run manually with: npx lighthouse http://localhost:3000/index.html --view'",
		"seo:manual": "echo 'üöÄ Start server first: npm run dev:simple, then run: npx lighthouse http://localhost:3000/index.html --view --chrome-flags=\"--headless\"'",
		"seo:full": "lhci autorun",
		"lighthouse": "npm run seo:full",
		"format": "prettier --write \"**/*.{ts,js,json}\" --ignore-path .prettierignore",
		"format:check": "prettier --check \"**/*.{ts,js,json}\" --ignore-path .prettierignore",
		"type-check": "tsc --noEmit",
		"quality": "npm run lint:check && npm run format:check && npm run type-check && npm run lint:css:check && npm run lint:tailwind:check",
		"quality:fix": "npm run lint && npm run format && npm run type-check && npm run lint:css",
		"// === TESTING ===": "",
		"test": "node scripts/pre-test-check.js && npm run copy-static && vitest src/ --exclude=\"src/__tests__/infrastructure/**\" --exclude=\"src/__tests__/ci/**\"",
		"test:watch": "vitest --watch --exclude=\"src/__tests__/infrastructure/**\" --exclude=\"src/__tests__/ci/**\"",
		"test:ui": "vitest --ui --exclude=\"src/__tests__/infrastructure/**\" --exclude=\"src/__tests__/ci/**\"",
		"test:unit": "vitest src/ --exclude=\"src/__tests__/infrastructure/**\" --exclude=\"src/__tests__/ci/**\" --exclude=\"**/*integration*\"",
		"test:integration": "vitest tests/integration/",
		"test:infrastructure": "vitest src/__tests__/infrastructure/ --run",
		"test:deployment": "vitest src/__tests__/ci/ --run",
		"test:pre-commit": "vitest src/__tests__/infrastructure/pre-commit-startup.test.ts --run",
		"test:quality": "npm run copy-static && npm run test:unit && npm run quality",
		"test:ci": "npm run test:infrastructure && npm run test:deployment && npm run test:quality",
		"// === EMERGENCY & MAINTENANCE ===": "",
		"port:check": "node scripts/check-port.js",
		"emergency": "npm run port:check && npm run build:clean",
		"emergency:full": "./scripts/emergency-recovery.sh",
		"db:setup": "./scripts/setup-database.sh",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@lhci/cli": "^0.15.1",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/express-rate-limit": "^5.1.3",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^24.0.4",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitejs/plugin-react": "^4.6.0",
		"autoprefixer": "^10.4.21",
		"eslint": "^8.57.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"html-validate": "^9.7.1",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"postcss": "^8.5.6",
		"prettier": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"stylelint": "^16.21.0",
		"stylelint-config-standard": "^38.0.0",
		"supertest": "^7.1.1",
		"tailwindcss": "^4.1.11",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vite": "^7.0.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.3",
		"@types/pg": "^8.15.4",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"bcrypt": "^6.0.0",
		"concurrently": "^9.2.0",
		"dotenv": "^16.6.0",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.1",
		"nodemon": "^3.1.10",
		"pg": "^8.16.2",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	}
}
