# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zentropy
DB_USER=your_username
DB_PASSWORD=your_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# JWT Configuration (CRITICAL FOR PRODUCTION)
SECRET_KEY=your_jwt_secret_key_here_generate_with_secrets_token_urlsafe_32

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id.googleusercontent.com

# Microsoft OAuth Configuration
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
FRONTEND_URL=http://localhost:5173
MICROSOFT_TENANT_ID=common

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# JWT Configuration (Enhanced)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_EXTENDED_TOKEN_EXPIRE_MINUTES=43200
JWT_ALGORITHM=HS256
JWT_REQUIRE_SECURE_KEY_IN_PRODUCTION=true

# Password Security Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=false
PASSWORD_HISTORY_COUNT=4
PASSWORD_ENABLE_COMPLEXITY_SCORING=false
PASSWORD_MIN_COMPLEXITY_SCORE=0

# Rate Limiting Configuration (Enhanced)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_EXPONENTIAL_BACKOFF=true
RATE_LIMIT_MAX_BACKOFF_SECONDS=300
RATE_LIMIT_VIOLATION_WINDOW_HOURS=24
RATE_LIMIT_AUTH_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW_MINUTES=15
RATE_LIMIT_OAUTH_REQUESTS=20
RATE_LIMIT_OAUTH_WINDOW_MINUTES=1
RATE_LIMIT_EMAIL_REQUESTS=3
RATE_LIMIT_EMAIL_WINDOW_MINUTES=5
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW_MINUTES=1

# Verification Code Configuration
VERIFICATION_CODE_LENGTH=6
VERIFICATION_CODE_TYPE=numeric

# Email Verification Settings
VERIFICATION_EMAIL_EXPIRATION_MINUTES=15
VERIFICATION_EMAIL_MAX_ATTEMPTS=3
VERIFICATION_EMAIL_RATE_LIMIT_MINUTES=1
VERIFICATION_EMAIL_HOURLY_LIMIT=6

# Two-Factor Authentication Settings
VERIFICATION_2FA_EXPIRATION_MINUTES=5
VERIFICATION_2FA_MAX_ATTEMPTS=3
VERIFICATION_2FA_RATE_LIMIT_MINUTES=1

# Password Reset Settings
VERIFICATION_PASSWORD_RESET_EXPIRATION_MINUTES=30
VERIFICATION_PASSWORD_RESET_MAX_ATTEMPTS=5
VERIFICATION_PASSWORD_RESET_RATE_LIMIT_MINUTES=2

# Password Change Settings
VERIFICATION_PASSWORD_CHANGE_EXPIRATION_MINUTES=15
VERIFICATION_PASSWORD_CHANGE_MAX_ATTEMPTS=3
VERIFICATION_PASSWORD_CHANGE_RATE_LIMIT_MINUTES=1

# Email Change Settings
VERIFICATION_EMAIL_CHANGE_EXPIRATION_MINUTES=15
VERIFICATION_EMAIL_CHANGE_MAX_ATTEMPTS=3
VERIFICATION_EMAIL_CHANGE_RATE_LIMIT_MINUTES=1

# Account Recovery Settings
VERIFICATION_ACCOUNT_RECOVERY_EXPIRATION_MINUTES=60
VERIFICATION_ACCOUNT_RECOVERY_MAX_ATTEMPTS=3
VERIFICATION_ACCOUNT_RECOVERY_RATE_LIMIT_MINUTES=5

# Sensitive Action Settings
VERIFICATION_SENSITIVE_ACTION_EXPIRATION_MINUTES=10
VERIFICATION_SENSITIVE_ACTION_MAX_ATTEMPTS=2
VERIFICATION_SENSITIVE_ACTION_RATE_LIMIT_MINUTES=1

# Session Security Configuration
SESSION_TIMEOUT_MINUTES=120
MAX_CONCURRENT_SESSIONS=3
ENABLE_AUDIT_LOGGING=false
ENABLE_SECURITY_HEADERS=true

# Email Configuration (Development with Mailpit)
EMAIL_ENABLED=true
SMTP_SERVER=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false
SMTP_FROM_EMAIL=noreply@zentropy.local
SMTP_FROM_NAME=Zentropy