echo "🔍 Running pre-commit formatting checks..."

# Run quick formatting and linting fixes
echo "📋 Auto-fixing formatting and linting..."
npm run fix

# Re-stage any files that were modified by linting/formatting
echo "📝 Re-staging formatted files..."
git add .

echo "✅ Pre-commit formatting complete!"
echo "🎉 Files formatted and staged - ready to commit!"